<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    tools:context=".MainActivity" >
    
<LinearLayout
    android:id="@+id/first2buttons"
    android:layout_width="match_parent"
    android:weightSum="100"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/button_qiu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:background="@drawable/button_event"
        android:contentDescription="recent activities"
        android:onClick="qiu_rui_qing"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="recentAcitivity" />

     <ImageButton
        android:id="@+id/button_tao"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:onClick="tao_kang"
        android:text="newStudent" 
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/button_freshman101"/>

</LinearLayout>
<LinearLayout
    android:id="@+id/second2buttons"
    android:layout_width="match_parent"
    android:weightSum="100"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
     
    <ImageButton
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:onClick="Food2Cssa"
        android:text="FoodToCssa" 
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/button_food2cssa"/>

    <ImageButton
        android:id="@+id/button_hu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:layout_below="@+id/button_qiu"
        android:onClick="hu_jia_ying"
        android:text="sponsor" 
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/button_sponsor"/>
</LinearLayout>

<ViewFlipper
    android:id="@+id/vf"
    android:layout_width="match_parent"
    android:layout_height="100px" >
</ViewFlipper>
</LinearLayout>