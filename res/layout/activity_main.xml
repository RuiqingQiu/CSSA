<RelativeLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ImageButton
        android:id="@+id/button_qiu"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/button_event"
        android:contentDescription="recent activities"
        android:onClick="qiu_rui_qing"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="recentAcitivity" />

     <ImageButton
        android:id="@+id/button_tao"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_toRightOf="@+id/button_qiu"
        android:onClick="tao_kang"
        android:text="newStudent" 
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_freshman101"/>
   
    <ImageButton
        android:id="@+id/button4"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/button_qiu"
        android:onClick="Food2Cssa"
        android:text="FoodToCssa" 
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_food2cssa"/>

    <ImageButton
        android:id="@+id/button_hu"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/button_qiu"
        android:layout_toRightOf="@+id/button4"
        android:layout_alignRight="@+id/button_tao"
        android:onClick="hu_jia_ying"
        android:text="sponsor" 
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_sponsor"/>
    

     <ViewFlipper
        android:id="@+id/vf"
        android:layout_below="@+id/button_hu"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

    </ViewFlipper>

</RelativeLayout>