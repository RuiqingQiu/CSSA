<?xml version="1.0" encoding="utf-8"?>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
        android:background="#ffffff"
    >
        >
    <RelativeLayout
        android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

          <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="第三章 初来乍到\n"
        android:gravity="center"
		android:textSize="22sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册报到：International center （ICenter"
		android:textSize="20sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/C31" 
		android:textSize="14sp"
		android:lineSpacingExtra="6dp"
        />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="医疗检验：TB test"
		android:textSize="20sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/C32" 
		android:textSize="14sp"
		android:lineSpacingExtra="6dp"
        />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="临时住宿："
		android:textSize="20sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/C33" 
		android:textSize="14sp"
		android:lineSpacingExtra="6dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="学生保险:"
		android:textSize="20sp"
        />
     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/C34" 
		android:textSize="14sp"
		android:lineSpacingExtra="6dp"
        />
        </LinearLayout>
    </ScrollView>
      
</RelativeLayout>
<RelativeLayout
     android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:gravity="right">

    <Button
        android:id="@+id/ch3B"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop = "200dp"
        android:text="《《《《" 
        android:onClick = "ch3ShowRight"/>

    </RelativeLayout>
</FrameLayout>